<% content_for :js do %>
  <%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
<% end %>

<%= simple_form_for([@group, @article], :html => {:novalidate => true}) do |f| %>
  <%= f.input :title %>
  <%= f.ckeditor :body, :input_html => { :width => 800 } %>
  <%= f.button :submit %>
<% end %>