<h1>My Profile</h1>

<% if @user.avatar? %>
  <p>My Avatar</p>
  <%= image_tag(@user.avatar_url) %>
  <p>Change Avatar</p>
<% else %>
    <p>Add Avatar</p>
<% end %>

<%= form_for @user, :url => profile_path, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.file_field :avatar %>
  </p>
  <%= f.submit "Save Avatar" %>
<% end %>

<p>My Email: <%= @user.email %></p>